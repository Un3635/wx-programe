  flex-direction: column;
  /* align-items: center; */
  justify-content: space-between;
  /* padding-left: 5px; */
  box-sizing: border-box;
} 


/* 设置border 1px */

.border-1px {
   content: " ";
   position: absolute;
   left: 0;
   top: 0;
   right: 0;
   height: 1px;
   border-top: 1px solid #D9D9D9;
   color: #D9D9D9;
   -webkit-transform-origin: 0 0;
   transform-origin: 0 0;
   -webkit-transform: scaleY(0.5);
   transform: scaleY(0.5);
}